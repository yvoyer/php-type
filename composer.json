{
    "name": "star/php-type",
    "description": "Package to wrap basic php types behind a common interface",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^7.0|^8.0",
        "ext-bcmath": "*",
        "ext-mbstring": "*",
        "beberlei/assert": "^3.3"
    },
    "require-dev":{
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.5",
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan-phpunit": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Star\\Component\\Type\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\Component\\Type\\Tests\\": "tests"
        }
    },
    "config": {
        "bin-dir": "bin/",
        "sort-package": true
    }
}
